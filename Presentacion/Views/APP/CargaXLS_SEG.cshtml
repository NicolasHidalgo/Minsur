<script>

    var fn_yesterday = function (date1) {
        var dt = new Date(date1);
        return new Date((dt.setDate(dt.getDate() - 1))).toString();
    }

    function formatDate(date) {
        var d = new Date(date),
            month = '' + (d.getMonth() + 1),
            day = '' + d.getDate(),
            year = d.getFullYear();

        if (month.length < 2) month = '0' + month;
        if (day.length < 2) day = '0' + day;

        return [year, month, day].join('-');
    }
    function formatDate2(date) {
        var d = new Date(date),
            month = '' + (d.getMonth() + 1),
            day = '' + d.getDate(),
            year = d.getFullYear();

        if (month.length < 2) month = '0' + month;
        if (day.length < 2) day = '0' + day;

        return [year, month].join('-');
    }

    var today = new Date();
    var yesterday = fn_yesterday(today)
    var yesterdayFormat = formatDate(yesterday);

    if ($("#ddlFrecuencia option:selected").val() == "M") {
        $('#dpFecInforme').datepicker('destroy');
        $('#dpFecInforme').datepicker({
            pickTime: false,
            autoclose: true,
            language: 'es',
            format: 'yyyy-mm',
            maxViewMode: 2,
            minViewMode: 1,
            startView: 1,
        });
        var fec = $('#dpFecInforme').val()
        fec = fec.replace("-", "/")
        var date = new Date(fec);
        var dateFormat = formatDate2(date);
        $("#dpFecInforme").datepicker("update", dateFormat);
    }
    if ($("#ddlFrecuencia option:selected").val() == "D") {
        $('#dpFecInforme').datepicker('destroy');
        $('#dpFecInforme').datepicker({
            pickTime: false,
            autoclose: true,
            language: 'es',
            format: 'yyyy-mm-dd',
            maxViewMode: 2,
            minViewMode: 0,
            startView: 0,
        });
        var fec = $('#dpFecInforme').val() + '-01';
        fec = fec.replace("-", "/")
        var date = new Date(fec);
        var dateFormat = formatDate(date);
        $("#dpFecInforme").datepicker("update", dateFormat);
    }

    $('#ddlFrecuencia').select2({
        theme: 'bootstrap',
        width: '100%',
        placeholder: "",
        allowClear: false,
        debug: true,
        minimumResultsForSearch: -1,
    }); 

    $("#ddlFrecuencia").on("change", function () {
        if ($("#ddlFrecuencia option:selected").val() == "M") {
            $('#dpFecInforme').datepicker('destroy');
            $('#dpFecInforme').datepicker({
                pickTime: false,
                autoclose: true,
                language: 'es',
                format: 'yyyy-mm',
                maxViewMode: 2,
                minViewMode: 1,
                startView: 1,
            });
            var fec = $('#dpFecInforme').val()
            fec = fec.replace("-", "/")
            var date = new Date(fec);
            var dateFormat = formatDate2(date);
            $("#dpFecInforme").datepicker("update", dateFormat);
        }
        if ($("#ddlFrecuencia option:selected").val() == "D") {
            $('#dpFecInforme').datepicker('destroy');
            $('#dpFecInforme').datepicker({
                pickTime: false,
                autoclose: true,
                language: 'es',
                format: 'yyyy-mm-dd',
                maxViewMode: 2,
                minViewMode: 0,
                startView: 0,
            });
            var fec = $('#dpFecInforme').val() + '-01';
            fec = fec.replace("-","/")
            var date = new Date(fec);
            var dateFormat = formatDate(date);
            $("#dpFecInforme").datepicker("update", dateFormat);
        }
    });
</script>

