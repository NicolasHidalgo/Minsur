<script>

    var fn_yesterday = function (date1) {
        var dt = new Date(date1);
        return new Date((dt.setDate(dt.getDate() - 1))).toString();
    }

    function formatDate(date) {
        var d = new Date(date),
            month = '' + (d.getMonth() + 1),
            day = '' + d.getDate(),
            year = d.getFullYear();

        if (month.length < 2) month = '0' + month;
        if (day.length < 2) day = '0' + day;

        return [year, month, day].join('-');
    }
    function formatDate2(date) {
        var d = new Date(date),
            month = '' + (d.getMonth() + 1),
            day = '' + d.getDate(),
            year = d.getFullYear();

        if (month.length < 2) month = '0' + month;
        if (day.length < 2) day = '0' + day;

        return [year, month].join('-');
    }

    var today = new Date();
    var yesterday = fn_yesterday(today)
    var yesterdayFormat = formatDate(yesterday);
    var _cod_mes = formatDate2(today);

    //$('#dpFecha').datepicker({
    //    pickTime: false,
    //    autoclose: true,
    //    language: 'es',
    //    format: 'yyyy-mm-dd',
    //    maxViewMode: 2,
    //    minViewMode: 0,
    //    startView: 0,
    //});
    $('#dpFecha').datepicker({
        pickTime: false,
        autoclose: true,
        language: 'es',
        format: 'yyyy-mm',
        maxViewMode: 2,
        minViewMode: 1,
        startView: 1,
    });

    $("#dpFecha").datepicker("update", _cod_mes);

    $("#ddlFrecuenciaFilter").on("change", function () {
        if ($("#ddlFrecuenciaFilter option:selected").val() == "M") {
            $('#dpFecha').datepicker('destroy');

            var fec = $('#dpFecha').val()
            fec = fec.replace("-", "/")
            var date = new Date(fec);
            var dateFormat = formatDate2(date);
            $("#dpFecha").val(dateFormat);

            $('#dpFecha').datepicker({
                pickTime: false,
                autoclose: true,
                language: 'es',
                format: 'yyyy-mm',
                maxViewMode: 2,
                minViewMode: 1,
                startView: 1,
            });
            
            //$("#dpFecha").datepicker("update", dateFormat);
        }
        if ($("#ddlFrecuenciaFilter option:selected").val() == "D") {
            $('#dpFecha').datepicker('destroy');

            var fec = $('#dpFecha').val() + '-01';
            fec = fec.replace("-", "/")
            var date = new Date(fec);
            var dateFormat = formatDate(date);
            $("#dpFecha").val(dateFormat);

            $('#dpFecha').datepicker({
                pickTime: false,
                autoclose: true,
                language: 'es',
                format: 'yyyy-mm-dd',   
                maxViewMode: 2,
                minViewMode: 0,
                startView: 0,
            });
            
            //$("#dpFecha").datepicker("update", dateFormat);
        }
    });
</script>

